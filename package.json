{
  "name": "gymdesk",
  "version": "1.0.1",
  "description": "Sistema de gesti√≥n de gimnasios",
  "main": "main.js",
  "scripts": {
    "build-css": "npx tailwindcss -i ./src/css/index.css -o ./dist/output.css",
    "start": "npm run build-css && electron .",
    "prebuild": "npm run build-css && cd ../GymDesk-backend && npm run build",
    "build": "electron-builder --win --x64",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "GymDesk Development Team",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/woodyjacques/GymDesk-desktop.git"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1",
    "live-server": "^1.2.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.gymdesk.app",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "productName": "GymDesk",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json",
      "dist/output.css",
      "src/**/*",
      "build/icon.ico"
    ],
    "asarUnpack": [
      "src/html/**/*",
      "src/assets/**/*",
      "src/js/**/*"
    ],
    "extraResources": [
      {
        "from": "../GymDesk-backend/dist",
        "to": "backend"
      },
      {
        "from": "../GymDesk-backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../GymDesk-backend/src/html",
        "to": "backend/html"
      },
      {
        "from": "../GymDesk-backend/package.json",
        "to": "backend/package.json"
      },
      {
        "from": "../GymDesk-backend/.env",
        "to": "backend/.env"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GymDesk"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "woodyjacques",
        "repo": "GymDesk-desktop"
      }
    ]
  }
}